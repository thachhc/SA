@{
    ViewData["Title"] = "Home Page";
}
@model List<ProjectFinal.Models.Product>


<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>

    @foreach (var p in Model)
    {
        <partial name="_Product" for="@p" />
    }

</div><!--features_items-->

<div class="category-tab">
    <!--category-tab-->
    <div class="col-sm-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#deple" data-toggle="tab">Dép Lê</a></li>
            <li><a href="#giaycao" data-toggle="tab">Giày Cao</a></li>
            <li><a href="#giaythethao" data-toggle="tab">Giày Thể Thao</a></li>
            <li><a href="#giayboot" data-toggle="tab">Giày Boot</a></li>
            <li><a href="#giayro" data-toggle="tab">Giày Rọ</a></li>
        </ul>
    </div>

    <div class="tab-content">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="tab-pane fade @(category == ViewBag.FirstCategory ? "in active" : "")" id="@category.Name">
                @foreach (var p in ViewBag.Products)
                {
                    if (p.CategoryId == category.Id)
                    {
                        <partial name="_ProductBelow" for="@p" />
                    }
                }
            </div>
        }
    </div>
</div><!--/category-tab-->
    
